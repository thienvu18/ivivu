<Window x:Class="ivivuApp.RoomDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ivivuApp"
        mc:Ignorable="d"
        Title="RoomDetails" Height="151.4" Width="373.2"
        Loaded="Window_Loaded">
    <DockPanel>
        <StackPanel Margin="0,0,0,-0.4" Width="120">
            <TextBlock Name="tbRoomNumber">Số phòng</TextBlock>
            <TextBlock Name="tbRoomType">Loại phòng</TextBlock>
            <TextBlock Name="tbHotelName">Tên khách sạn</TextBlock>
            <TextBlock Name="tbPrice">Đơn giá</TextBlock>
            <TextBlock Name="tbAddress">Địa chỉ</TextBlock>
        </StackPanel>
        <StackPanel Margin="0,0,0,-0.4" Width="163" Height="122" VerticalAlignment="Top">
            <TextBlock Name="tbEmployeeId">Mã nhân viên</TextBlock>
            <TextBlock Name="tbEmployeeName">Họ tên</TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
